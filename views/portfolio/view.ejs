<% include ../common/header %>
<section id="contents" class="contents">
	<h2 class="page-tit"><%= data.name %> <span><%= data.subname %></span></h2>
	<span><%= moment(data.date).format("YYYY.MM.DD hh:mm") %></span>
	<img src="<%= data.image %>" alt="">
	<button><%= data.recommend %></button>
	<button>좋아요</button>
	<div><%= data.contents %></div>
	<div>
		<% data.tags.forEach(data=>{ %>
			<a href="/portfolio?tag=<%= data.name %>" class="tag"><%= data.name %></a>
		<% }); %>
	</div>
	<div>소셜댓글(F, K, T)</div>
	<form method="post" action="">
		<textarea class="inp-txt" name="contents"></textarea>
		<input type="text" class="inp-txt" name="name">
		<input type="password" class="inp-txt" name="password">
		<input type="submit" value="등록">
	</form>
</section>
<% include ../common/footer %>